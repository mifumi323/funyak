<UserControl x:Class="MifuminSoft.funyak.UI.SpriteEditor.SpriteSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MifuminSoft.funyak.UI.SpriteEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Canvas x:Name="canvas" ClipToBounds="True" Width="{Binding Width, ElementName=background}" Height="{Binding Height, ElementName=background}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle x:Name="background"/>
        </Canvas>
    </ScrollViewer>
</UserControl>

<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFTests"
      xmlns:SpriteEditor="clr-namespace:MifuminSoft.funyak.UI.SpriteEditor;assembly=funyak.UI" x:Class="WPFTests.SpriteEditorTest"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SpriteEditorTest" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="comboBox" ItemsSource="{Binding Source.Chip, ElementName=spriteSelector, Mode=TwoWay}" DisplayMemberPath="Key" SelectedItem="{Binding SelectedItem, ElementName=spriteSelector}"/>
        <SpriteEditor:ChipSelector x:Name="spriteSelector" Grid.Row="1"/>
    </Grid>
</Page>
